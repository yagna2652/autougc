# AutoUGC Environment Variables
# Copy this file to .env and fill in your values

# Required: Anthropic API key for Claude Vision + text analysis
ANTHROPIC_API_KEY=sk-ant-...

# Optional: OpenAI API key (only needed if using Whisper API instead of local)
OPENAI_API_KEY=sk-...

# Optional: anthropic Anthropic model to use (default: claude-sonnet-4-20250514)
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Optional: Whisper mode - "local" or "api" (default: local)
WHISPER_MODE=local

# Optional: Whisper model size for local mode (tiny, base, small, medium, large)
# Larger models are more accurate but slower
WHISPER_MODEL=base
